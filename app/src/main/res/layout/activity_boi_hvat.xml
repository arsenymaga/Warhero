<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".matrosov.BioActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/osvobod" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ds_moster"
            android:text="Михаил Хватков родился 24 ноября 1925 года в селе Луговое (ныне — в черте Ульяновска). Хватков был призван на службу в Рабоче-крестьянскую Армию. С того же года — на фронтах Великой Отечественной войны.
К июню 1944 года гвардии ефрейтор Михаил Хватков был сапёром 76-го отдельного гвардейского сапёрного батальона. Отличился во время освобождения Витебской области Белорусской ССР. Участвовал в прорыве немецкой обороны в районе деревни Сиротино."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>


</ScrollView>