<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fon"
    android:padding="4dp"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/PhotoMotrosov"
                android:layout_width="411dp"
                android:layout_height="355dp"
                android:onClick="matrosov"
                android:alpha="0.3"
                app:srcCompat="@drawable/motrosov" />

            <TextView
                android:id="@+id/textNameHvat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/ds_moster"
                android:text="Александр Матвеевич Матросов"
                android:textColor="@color/black"
                android:textSize="22sp"
                />

            <ImageView
                android:id="@+id/PhotoMitryagin"
                android:layout_width="411dp"
                android:layout_height="355dp"
                android:alpha="0.3"
                android:onClick="mitryagin"
                app:srcCompat="@drawable/mitryagin" />

            <TextView
                android:id="@+id/textYearsHvat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/ds_moster"
                android:layout_gravity="center"
                android:text="Митрягин Владимир Фёдорович"
                android:textColor="@color/black"
                android:textSize="22sp" />


            <ImageView
                android:id="@+id/PhotoHvatkov"
                android:layout_width="411dp"
                android:layout_height="355dp"
                android:onClick="hvatkov"
                android:alpha="0.3"
                app:srcCompat="@drawable/hvatkov" />

            <TextView
                android:id="@+id/textName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ds_moster"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Хватков Михаил Петрович"
                android:textColor="@color/black"
                android:textSize="22sp" />



            <ImageView
                android:id="@+id/PhotoBarishev"
                android:layout_width="411dp"
                android:layout_height="355dp"
                android:onClick="barishev"
                android:alpha="0.3"
                app:srcCompat="@drawable/imagebarishev" />

            <TextView
                android:id="@+id/textNameBarishev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ds_moster"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Аркадий Фёдорович Барышев"
                android:textColor="@color/black"
                android:textSize="22sp" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>